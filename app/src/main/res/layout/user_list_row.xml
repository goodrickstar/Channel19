<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:padding="@dimen/default_padding"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/option_image_view"
        android:layout_width="@dimen/profile_picture_size"
        android:layout_height="@dimen/profile_picture_size"
        android:layout_marginRight="@dimen/half_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/clickPoint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mail"
        app:layout_constraintStart_toEndOf="@+id/option_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:textAppearance="@style/large_font"
        app:layout_constraintLeft_toRightOf="@+id/option_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/carrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:singleLine="true"
        android:textAppearance="@style/small_font"
        app:layout_constraintBottom_toTopOf="@+id/banner"
        app:layout_constraintLeft_toRightOf="@+id/option_image_view"
        app:layout_constraintStart_toStartOf="@+id/handle"
        app:layout_constraintTop_toBottomOf="@+id/handle" />

    <ImageView
        android:id="@+id/starIV"
        android:layout_width="@dimen/star_width"
        android:layout_height="@dimen/star_height"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="@+id/option_image_view"
        app:layout_constraintLeft_toRightOf="@+id/option_image_view"
        app:layout_constraintStart_toStartOf="@+id/handle" />

    <ImageView
        android:id="@+id/mail"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/mail"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/small_font"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/handle" />

    <TextView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom|right"
        android:singleLine="true"
        android:textAppearance="@style/small_font"
        app:layout_constraintBottom_toBottomOf="@+id/option_image_view"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
