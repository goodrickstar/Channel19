<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/fullscreenBackgroundColor"
    android:theme="@style/ThemeOverlay.Channel19.FullscreenContainer"
    tools:context="com.cb3g.channel19.ActivityReward" >

    <ProgressBar
        android:id="@+id/ad_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Loading Ad..."
        app:layout_constraintBottom_toTopOf="@+id/ad_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/ad_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/ad_progress_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>