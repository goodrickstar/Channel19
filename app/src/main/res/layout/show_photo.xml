<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/black_box_white_outline">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_box_white_outline_transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/show_photo_chat_history_button"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginStart="@dimen/default_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/history" />

        <TextView
            android:id="@+id/show_photo_handle_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/default_padding"
            android:textAppearance="@style/title_font" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:layout_marginEnd="@dimen/default_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/download_w" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ok"
        android:layout_below="@+id/top"
        android:layout_margin="1dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dialog_button"
        android:gravity="center"
        android:text="@string/close_cap"
        android:textAppearance="@style/title_font"
        android:textColor="@drawable/whitetoblue" />
</RelativeLayout>